{
    "manifest_version": 3,
    "name": "YouTube Screenshot Button",
    "version": "1.0",
    "description": "This Extension Helps you take screenshot of youtube video current image. So you can make faster notes while studying",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  